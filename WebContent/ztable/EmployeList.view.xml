<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="ztable.EmployeList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	            <Table items="{/empList}">
	                 <columns>
	                       <Column>                             
	                                    <Text text="Name"/>
	                       </Column>
	                        <Column>                          
	                                    <Text text="Role"/>                         
	                       </Column>
	                        <Column>	                           
	                                    <Text text="Department"/>                          
	                       </Column>
	                 </columns>
	                 <items>
	                      <ColumnListItem>
	                            <cells>
	                                 <Text text="{name}"/>
	                                 <Text text="{role}"/>
	                                 <Text text="{dept}"/>
	                            </cells>
	                      </ColumnListItem>               
	                 </items>
	            </Table>
		</content>
	</Page>
</core:View>